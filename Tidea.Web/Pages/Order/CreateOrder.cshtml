@page
@model Tidea.Web.Pages.Order.CreateOrder

<style>
html,body{
            min-height: 100vh;
            min-width: 100vw;
        }
        .parent{
            min-height: 50vh;
        }
        .parent>.row{
            display: flex;
            align-items: center;
            height: 50%;
        }
        .col img{
            height:100px;
            width: 100%;
            cursor: pointer;
            transition: transform 1s;
            object-fit: cover;
        }
        .col label{
            overflow: hidden;
            position: relative;
        }
        .imgbgchk:checked + label>.tick_container{
            opacity: 1;
        }
/*         aNIMATION */
        .imgbgchk:checked + label>img{
            transform: scale(1.25);
            opacity: 0.3;
        }
        .tick_container {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            cursor: pointer;
            text-align: center;
        }
        .tick {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            padding: 6px 12px;
            height: 40px;
            width: 40px;
            border-radius: 100%;
        }
</style>

<div class="card card-collapsable mb-4">
    <div class="card-body pb-0 px-3 px-sm-4 mx-sm-4 mx-md-0 pt-md-4 mt-md-2 px-md-3">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <h3 class="mb-4" style="text-align: center">
                    Wybierz metodę płatności
                </h3>
            </div>
        </div>
    </div>

    <div class="container parent">
        <div class="row row-cols-2 row-cols-md-4">
            @foreach (var item in @Model.PayUMethods.payByLinks)
            {
                <div class="col text-center p-4">
                    <input type="radio" name="imgbackground" id="@item.value" class="d-none imgbgchk" value="">
                    <label for="@item.value">
                        <img src="@item.brandImageUrl" alt="Image 1" class="w-50 h-auto text-center">
                        <div class="tick_container">
                            <div class="tick">
                                <i class="fa fa-check"></i>
                            </div>
                        </div>
                    </label>
                </div>
            }
        </div>
    </div>
</div>
