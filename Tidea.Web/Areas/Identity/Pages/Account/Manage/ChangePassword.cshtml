@page
@model ChangePasswordModel

@{
  Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
  body{
      color: #1a202c;
      text-align: left;
      background-color: #e2e8f0;    
  }
  .main-body {
      padding: 15px;
  }
  .card {
      box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
  }
  
  .card {
      position: relative;
      display: flex;
      flex-direction: column;
      min-width: 0;
      word-wrap: break-word;
      background-color: #fff;
      background-clip: border-box;
      border: 0 solid rgba(0,0,0,.125);
      border-radius: .25rem;
  }
  
  .card-body {
      flex: 1 1 auto;
      min-height: 1px;
      padding: 1rem;
  }
  
  .gutters-sm {
      margin-right: -8px;
      margin-left: -8px;
  }
  
  .gutters-sm>.col, .gutters-sm>[class*=col-] {
      padding-right: 8px;
      padding-left: 8px;
  }
  .mb-3 {
      margin-bottom: 1rem!important;
  }
  li {
  list-style-type: none;
  float: left;
  }
 
</style>

<div class="container">
  <div class="main-body">
 
    <!-- /Breadcrumb -->
    
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <i class="fa-solid fa-circle-user fa-9x"></i>
              <div class="mt-3">
                <h4>@Model.FirstName @Model.LastName</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
            
      
      <div class="col-md-8">
        <form method="post">
           <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Bieżące hasło</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Bieżące hasło"/>
                  <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Nowe hasło</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <input type="password" class="form-control" asp-for="NewPassword" placeholder="Nowe hasło"/>
                  <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Potwierdź nowe hasło</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <input type="password" class="form-control" asp-for="NewPasswordVerify" placeholder="Nowe hasło"/>
                  <span asp-validation-for="NewPasswordVerify" class="text-danger"></span>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-12">
                  <button type="submit" class="btn btn-info">Zapisz</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
</div>
@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
}
