@page
@model IndexModel
@{
  Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
  body{
      color: #1a202c;
      text-align: left;
      background-color: #e2e8f0;    
  }
  .main-body {
      padding: 15px;
  }
  .card {
      box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
  }
  
  .card {
      position: relative;
      display: flex;
      flex-direction: column;
      min-width: 0;
      word-wrap: break-word;
      background-color: #fff;
      background-clip: border-box;
      border: 0 solid rgba(0,0,0,.125);
      border-radius: .25rem;
  }
  
  .card-body {
      flex: 1 1 auto;
      min-height: 1px;
      padding: 1rem;
  }
  
  .gutters-sm {
      margin-right: -8px;
      margin-left: -8px;
  }
  
  .gutters-sm>.col, .gutters-sm>[class*=col-] {
      padding-right: 8px;
      padding-left: 8px;
  }
  .mb-3 {
      margin-bottom: 1rem!important;
  }
</style>

<div class="container">
  <div class="main-body">
 
    <!-- /Breadcrumb -->
    
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <i class="fa-solid fa-circle-user fa-9x"></i>
              <div class="mt-3">
                <h4>@Model.FirstName @Model.LastName</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
            
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Imię</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.FirstName
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Nazwisko</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.LastName
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.Email
              </div>
            </div>
                  
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Konto bankowe</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.Iban
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-12">
                <a class="btn btn-info" asp-page="Edit">Edytuj dane konta</a>
                <a class="btn btn-info" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Zmień hasło</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
}